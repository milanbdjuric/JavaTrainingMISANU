package praksa;

public class CharacterMessages{
	
	private int happySmileys, sadSmileys, loveJonSmileys, loveDaenerysSmileys;
	private Character character;
	
	CharacterMessages(Character character, int happySmileys, int sadSmileys, int loveJohnSmileys, int loveDaenerysSmileys){
		this.character = character;
		this.happySmileys = happySmileys;
		this.sadSmileys = sadSmileys;
		this.loveJonSmileys = loveJohnSmileys;
		this.loveDaenerysSmileys = loveDaenerysSmileys;
	}
	
	public Character getCharacter() {
		return character;
	}

	public void setCharacter(Character character) {
		this.character = character;
	}

	public int disposition() {
		return happySmileys - sadSmileys;
	}

	public int getLoveJonSmileys() {
		return loveJonSmileys;
	}

	public int getLoveDaenerysSmileys() {
		return loveDaenerysSmileys;
	}

	
	
	
	

}
