package praksa;

public class Character {
	
	private int happySmileys, sadSmileys, loveJonSmileys, loveDaenerysSmileys;
	
	private String name, allegiance, messagesFile;
	
	Character(){}
	
	Character(String name, String allegiance, String messagesFile){
		this.name = name;
		this.allegiance = allegiance;
		this.messagesFile = messagesFile;
 	}

	public String getName() {
		return name;
	}

	public String getAllegiance() {
		return allegiance;
	}

	public String getMessagesFile() {
		return messagesFile;
	}

	public void setHappySmileys(int happySmileys) {
		this.happySmileys = happySmileys;
	}

	public void setSadSmileys(int sadSmileys) {
		this.sadSmileys = sadSmileys;
	}
	
	public void setLoveJonSmileys(int loveJonSmileys) {
		this.loveJonSmileys = loveJonSmileys;
	}

	public void setLoveDaenerysSmileys(int loveDaenerysSmileys) {
		this.loveDaenerysSmileys = loveDaenerysSmileys;
	}
	
	public int disposition() {
		return happySmileys - sadSmileys;
	}

	public int getLoveJonSmileys() {
		return loveJonSmileys;
	}

	public int getLoveDaenerysSmileys() {
		return loveDaenerysSmileys;
	}
	
	
}
