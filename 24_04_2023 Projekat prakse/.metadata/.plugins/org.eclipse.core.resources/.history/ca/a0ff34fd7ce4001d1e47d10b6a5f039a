	public int countHappySmileys() {	
		int happyCounter = 0;
		for(String message : sender.getMessageLines()) {
			if(message.matches(".*[ğŸ˜„ğŸ˜ŠğŸ™‚ğŸ˜].*"))
				happyCounter++;				
			}
		return happyCounter;	
	}
	
	public int countSadSmileys() {	
		int sadCounter = 0;
		for(String message : sender.getMessageLines()) {
			if(message.matches(".*[ğŸ˜¢ğŸ˜­ğŸ‘¿ğŸ˜].*"))
				sadCounter++;				
			}
		return sadCounter;	
	}
	
