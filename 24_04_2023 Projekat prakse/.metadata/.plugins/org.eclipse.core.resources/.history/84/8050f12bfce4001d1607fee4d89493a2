package praksa;

import java.util.Arrays;
import java.util.List;

public enum Emoji {
	
	INLOVE("ğŸ˜˜", Arrays.asList("love")),
	HAPPY1("ğŸ˜„", Arrays.asList("happy")),
	HAPPY2("ğŸ˜Š", Arrays.asList("happy")),
	HAPPY3("ğŸ™‚", Arrays.asList("happy")),
	HAPPYANDINLOVE("ğŸ˜", Arrays.asList("happy", "love")),
	SAD1("ğŸ˜¢", Arrays.asList("sad".toLowerCase())),
	SAD2("ğŸ˜­", Arrays.asList("sad".toLowerCase())),
	SAD3("ğŸ‘¿", Arrays.asList("sad".toLowerCase())),
	SAD4("ğŸ˜", Arrays.asList("sad".toLowerCase()));

	private final String emoji;
	
	private final List<String> moods;
	
	Emoji(String emoji, List<String> moods){
		this.emoji = emoji;
		this.moods = moods;
	}
	
	public String getEmoji() {
		return emoji;
	}
	
	public List<String> getMoods(){
		return moods;
	}
}
